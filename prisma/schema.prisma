generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Tamanho {
  P
  G
}

model Adm {
  adm      String @id @default(cuid())
  senha    String
  username String
}

model User {
  id         String   @id @default(cuid())
  rm         Int      @unique
  nome       String
  email      String   @unique
  turma      String
  armario    Armario? @relation(fields: [id_armario], references: [num_armario])
  id_armario Int?     @unique
}

model Armario {
  num_armario Int      @id @unique @default(autoincrement())
  local       String
  aluno       User?
  validade    DateTime
  reservado   Boolean
  tamanho     Tamanho
  ocupado     Boolean
  dt_pagt     DateTime
}

